<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.authentication.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LecturerTakeAttendanceController</servlet-name>
        <servlet-class>controller.lecturer.TakeAttendanceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentTimeTableController</servlet-name>
        <servlet-class>controller.student.TimeTableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>allcontroller.Home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeTeacher</servlet-name>
        <servlet-class>allcontroller.HomeTeacher</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController2</servlet-name>
        <servlet-class>controller.authentication.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.authentication.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LecturerTakeAttendanceController</servlet-name>
        <url-pattern>/lecturer/att</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentTimeTableController</servlet-name>
        <url-pattern>/student/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeTeacher</servlet-name>
        <url-pattern>/HomeTeacher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController2</servlet-name>
        <url-pattern>/view/authentication/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>controller.authentication.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/lecturer/*</url-pattern>
    </filter-mapping>
</web-app>
